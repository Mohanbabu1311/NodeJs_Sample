<%- include('partials/header'); -%>
<div id="generatePdf"> 
 <header>
        <div class="logo" >
        <img src="/Zenitus.png" width="100rem" height="100rem" alt="" class="logo1">
        <h2 class="listh2" style="clear: left; float: right;">Employee Detail</h2>
        </div>
    </header>
<body >   
        <div class="details-content" >
            <h2 id="name" ><%= emp_detail.firstname %><%= emp_detail.midname %> <%= emp_detail.lastname %></h2>
            <div class="content">
                <p>Address : <%= emp_detail.add1 %>,<%= emp_detail.add2 %>,<%= emp_detail.pincode %></p>
                <p>Previous Company : <%= emp_detail.pre_company %></p>
                <p id="bld_grp">Blood Group : <%= emp_detail.blood_grp %></p>
                <p id="bld_grp">Mobile Number : <%= emp_detail.mobile %></p>
                <p id="bld_grp">Employee Role : <%= emp_detail.role %></p>
            </div>
        </div>
    </body>
</div>
<div class="vertical-center">
    <button id="pdfButton">Generate PDF</button>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js">
    </script>
    <script>
        const filename = document.querySelector('#name');
        //console.log(filename.innerHTML);
       var btn = document.getElementById("pdfButton");
       var createpdf = document.getElementById("generatePdf");
       var opt = {
          margin: 1,
          filename: filename.innerHTML+'.pdf',
          html2canvas: {
             scale: 2
          },
          jsPDF: {
             unit: 'in',
             format: 'letter',
             orientation: 'portrait'
          }
       };
       btn.addEventListener("click", function() {
          html2pdf().set(opt).from(createpdf).save();
       });
    </script>
<%- include('partials/footer'); -%>

  <style>
    
      #pdfButton {
         background-color: #4caf50;
         border-radius: 5px;
         color: white;
      }
      .details-content{
        padding-top: 2rem;
      }
      .vertical-center {
            margin: 0;
            top: 50%;
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
}
  </style>
  